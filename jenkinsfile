def image_tag = "ABC"


//  = sh(script: 'uname', returnStdout: true)

pipeline {
    agent any
    environment {
          MY_FILES = sh(script: 'cd mydir && ls -l', returnStdout: true)
        }
    stages {
        stage ('Test') {
            steps {
                echo "${image_tag}"
                echo "${MY_FILES}"
                }
            }
        }
    }
}