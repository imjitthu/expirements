pipeline {
    agent any
    stages {
        stage ('Test') {
            steps {
                sh '''
                tag=$(git tag | xargs -I@ git log --format=format:"%ai @%n" -1 @ | sort -k2 | tail -n 1 | awk '{print $4}')
                echo $tag
                sed 's/admin/${tag}/' pod.yml
                '''
                def text = readFile file: "pod.yml"
                println text
                // text = text.replace("admin", "$tag")
                // writeFile file: "pod.yml", text: text
                sh 'cat pod.yml'
            }
        }
    }
}